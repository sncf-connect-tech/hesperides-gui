pipeline {
    agent any
    tools {
        maven 'maven3'
        nodejs 'NodeJS_8.4.0'
    }
    stages {
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }

        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv(env.SONARQUBE_URL) {
                    // requires SonarQube Scanner for Maven 3.2+
                    sh 'mvn org.sonarsource.scanner.maven:sonar-maven-plugin:3.2:sonar -Dsonar.sources=src/app -Dsonar.language=js'
                }
            }
        }
    }
}